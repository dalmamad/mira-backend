{
  "name": "mira-backend",
  "version": "1.0.0",
  "description": "a chat app powered by ts and psql",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "NODE_ENV=development nodemon src/server.ts",
