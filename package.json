{
  "name": "mira-backend",
  "version": "1.0.0",
  "description": "a chat app powered by ts and psql",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "dotenv -e .env.development -- nodemon src/index.ts",
    "dev:docker": "prisma migrate dev && npm run dev",
    "prepare": "husky install",
    "clean": "rimraf build/",
    "clean:docker": "rimraf node_modules/ src/",
    "build": "npm run clean && npx tsc",
    "start": "dotenv -e .env.production -- node build/index.js",
    "start:docker": "prisma migrate deploy && npm run start",
    "migrate:dev": "dotenv -e .env.development -- prisma migrate dev",
    "migrate:prod": "dotenv -e .env.production -- prisma migrate deploy",
    "studio:dev": "dotenv -e .env.development -- prisma studio",
    "studio:prod": "dotenv -e .env.production -- prisma studio",
    "format": "npx prettier --write ."
  },
  "author": "dalmamad",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.15.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.36.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.4",
    "rimraf": "^4.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "npx eslint --fix"
    ]
  },
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "decoress": "^0.1.3",
    "prisma": "^4.11.0",
    "dotenv-cli": "^7.2.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "sockerate": "^0.1.2",
    "socket.io": "^4.6.1"
  }
}
