// TODO: change env to get from env.dev or .product
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id Int @id @default(autoincrement())
  username String @unique @db.VarChar(20)
  password String
}

